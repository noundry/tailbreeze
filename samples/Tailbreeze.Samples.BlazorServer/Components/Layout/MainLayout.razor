@inherits LayoutComponentBase

<HeadContent>
    <link rel="stylesheet" href="/tailbreeze/app.css" />
</HeadContent>

<div class="flex h-screen bg-gray-50">
    <div class="w-64 bg-white shadow-lg">
        <NavMenu />
    </div>

    <main class="flex-1 overflow-y-auto">
        <div class="bg-white shadow px-4 py-3">
            <a href="https://tailwindcss.com" target="_blank" class="text-indigo-600 hover:text-indigo-800">Tailwind CSS Docs</a>
        </div>

        <article class="p-6">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet class="fixed bottom-0 left-0 right-0 bg-red-600 text-white p-4">
    An unhandled error has occurred.
    <a href="." class="underline ml-4">Reload</a>
    <span class="float-right cursor-pointer">🗙</span>
</div>
