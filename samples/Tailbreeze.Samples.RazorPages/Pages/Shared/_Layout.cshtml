<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tailbreeze.Samples.RazorPages</title>
    <script type="importmap"></script>
    <tailwind-link cdn-fallback="true" />
</head>
<body class="bg-gray-50">
    <header class="bg-white shadow">
        <nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
            <div class="flex h-16 justify-between">
                <div class="flex">
                    <div class="flex flex-shrink-0 items-center">
                        <a asp-page="/Index" class="text-2xl font-bold text-indigo-600">Tailbreeze</a>
                    </div>
                    <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
                        <a asp-page="/Index" class="inline-flex items-center border-b-2 border-indigo-500 px-1 pt-1 text-sm font-medium text-gray-900">Home</a>
                        <a asp-page="/Privacy" class="inline-flex items-center border-b-2 border-transparent px-1 pt-1 text-sm font-medium text-gray-500 hover:border-gray-300 hover:text-gray-700">Privacy</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main class="mx-auto max-w-7xl px-4 py-8 sm:px-6 lg:px-8">
        @RenderBody()
    </main>

    <footer class="mt-auto bg-white shadow">
        <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
            <p class="text-center text-sm text-gray-500">
                &copy; 2025 - Tailbreeze Sample - <a asp-page="/Privacy" class="text-indigo-600 hover:text-indigo-500">Privacy</a>
            </p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
